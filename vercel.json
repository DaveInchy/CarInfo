{
  "build": {
    "env": {
      "NODE_ENV": "production"
    },
    "outputDirectory": "public"
  },
  "functions": {
    "index.js": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/public/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ]
}